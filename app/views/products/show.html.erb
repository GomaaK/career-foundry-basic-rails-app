<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1 class="h2">
        <%= @product.name %>
      </h1>
    </div>
  </div>
</div>

<section class="container">
  <div class="row">
    <div class="col-xs-6">
      <%= image_tag("bike.png", alt:"Racing bike image", class: "img-responsive center-block") %>
        <div class="form-group">  
          <% if signed_in? %>
            <h4>Add a review:</h4>
            <%= form_for([@product, @product.comments.build]) do |f| %>
              <p>
                <%= f.label :body, "Comments", class: "control-label" %><br>
                <%= f.text_area :body, class: "form-control" %>
              </p>
              <p>
                <div class="rating"></div>
              </p>
              <p>
                <%= f.submit "Submit", class: "btn btn-warning" %>
              </p>
            <% end %>
          <% end %>
        </div>  
      <%= render 'comments' %>
      <%= will_paginate @comments %>
    </div>

    <div class="col-xs-6">
      <p class="h3">
        <%= @product.description %>
      </p>

      <p class="h4">
        Color: <%= @product.colour %>
      </p>

      <p class="h4">
        Price: <%= @product.price %> EUR
      </p>

      <p>Average Rating:<div class="rated" data-score="<%= @product.average_rating %>"></div></p>

    </div>
  </div>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</section>

